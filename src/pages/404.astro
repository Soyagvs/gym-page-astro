---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="404 | not found">
    <main
        class="grid min-h-full place-items-center px-6 py-24 sm:py-32 lg:px-8"
    >
        <div class="text-center mt-52">
            <p class="text-8xl font-semibold text-[#dbff33]">404</p>
            <h1
                class="mt-4 text-3xl font-bold tracking-tight text-white sm:text-5xl"
            >
                Page not found
            </h1>
            <p class="mt-6 text-base leading-7 text-gray-600">
                Sorry, this page does not exist .
            </p>
            <div class="mt-10 flex items-center justify-center gap-x-6">
                <a
                    href="/"
                    class="bg-[#dbff33] px-3.5 py-2.5 text-sm font-semibold text-black  ad"
                >
                    Go back home
                </a>
            </div>
        </div>
    </main>
</Layout>
<style>
    .ad {
        border-radius: 10px 0px 10px 0px;
    }
</style>
