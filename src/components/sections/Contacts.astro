<section class="mb-20 mt-32" id="contact">
    <div class="space-y-5">
        <h2 class="text-center text-[#dbff33] text-2xl">Contact</h2>
        <p class="text-5xl text-center">
            <span class="font-extrabold">FOR MORE INFORMATION </span> CONTACT US
        </p>
    </div>
    <div class="flex justify-around items-center mt-20">
        <div class="flex-col justify-center items-center ">
            <form action="" class="flex flex-col w-72 ">
                <label for="name">Name</label>
                <input
                    type="text"
                    name="name"
                    id="name"
                    class="mb-4 p-2 border border-gray-300 rounded-md"
                    required
                    placeholder="enter your name"
                />
                <label for="email">Email</label>
                <input
                    type="email"
                    name="email"
                    id="email"
                    class="mb-4 p-2 border border-gray-300 rounded-md"
                    required
                    placeholder="example@example"
                />
                <label for="text">Message</label>
                <textarea
                    name="message"
                    id="message"
                    class="mb-4 p-2 border border-gray-300 rounded-md"
                    rows="4"
                    required
                    placeholder="enter your message"
                >
                </textarea>
                <button
                    type="submit"
                    class="p-2 bg-[#A4C639] text-white rounded-md"
                    >Submit</button
                >
            </form>
        </div>

        <div class="flex flex-col justify-center items-center">
            <p class="mb-5 text-gray-300">
                Find us at [Address] of [City] <br />and come visit us during
                our [Hours] opening hours.
            </p>
            <div class="flex justify-center p-1 border border-[#A4C639]">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d105073.45340191711!2d-58.515698585763836!3d-34.61565477036136!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcca3b4ef90cbd%3A0xa0b3812e88e88e87!2sBuenos%20Aires%2C%20Cdad.%20Aut%C3%B3noma%20de%20Buenos%20Aires!5e0!3m2!1ses-419!2sar!4v1718036684655!5m2!1ses-419!2sar"
                    width="600"
                    height="400"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                >
                </iframe>
            </div>
        </div>
    </div>
</section>
